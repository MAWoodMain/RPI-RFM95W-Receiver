<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Database connection settings -->
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://silent-fox:3306/data</property>
        <property name="connection.username">user</property>
        <property name="connection.password">password</property>
        <property name="show_sql">true</property>
        <property name="hibernate.enable_lazy_load_no_trans">true</property>

        <mapping class="me.mawood.persistence.loRaPacket.DataRate" />
        <mapping class="me.mawood.persistence.loRaPacket.TxInfo" />
        <mapping class="me.mawood.persistence.loRaPacket.RxInfo" />
        <mapping class="me.mawood.persistence.loRaPacket.LoRaPacket" />

    </session-factory>
</hibernate-configuration>